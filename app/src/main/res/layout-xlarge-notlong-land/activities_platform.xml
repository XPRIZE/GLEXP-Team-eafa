<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activitiesMainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_letters" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.23"
            layout="@layout/activity_top_area" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/activitiesIconsFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".23"/>

        <TableRow
            android:id="@+id/letter_row_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".65" >

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/activityIconArea1">

                <ImageView
                    android:id="@+id/activityIcon1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_platform_icon_margin"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/activity_icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_act_lt04" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activityReward1">

                    <ImageView
                        android:contentDescription="@string/activity_icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/rewardCup1"
                        android:src="@drawable/btn_award_red"

                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.25"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/activityIconArea2">

                <ImageView
                    android:id="@+id/activityIcon2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_platform_icon_margin"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/activity_icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_act_lt04" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activityReward2">

                    <ImageView
                        android:contentDescription="@string/activity_icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/rewardCup2"
                        android:src="@drawable/btn_award_orange"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:layout_gravity="end"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.25"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/activityIconArea3">

                <ImageView
                    android:id="@+id/activityIcon3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_platform_icon_margin"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/activity_icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_act_lt04" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activityReward3">

                    <ImageView
                        android:contentDescription="@string/activity_icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/rewardCup3"
                        android:src="@drawable/btn_award_blue"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:layout_gravity="end"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.25"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/activityIconArea7">

                <ImageView
                    android:id="@+id/activityIcon7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_platform_icon_margin"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/activity_icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_act_lt04"
                    android:visibility="visible" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activityReward7">

                    <ImageView
                        android:contentDescription="@string/activity_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/rewardCup7"
                        android:src="@drawable/btn_award_orange"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:layout_gravity="end"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                </LinearLayout>
            </RelativeLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".65" >

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/activityIconArea4">

                <ImageView
                    android:id="@+id/activityIcon4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_platform_icon_margin"
                    android:contentDescription="@string/activity_icon"
                    android:src="@drawable/btn_act_sd04" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activityReward4">

                    <ImageView
                        android:contentDescription="@string/activity_icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/rewardCup4"
                        android:src="@drawable/btn_award_orange"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:layout_gravity="end"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.25"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/activityIconArea5">

                <ImageView
                    android:id="@+id/activityIcon5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_platform_icon_margin"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/activity_icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_act_sd04" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activityReward5">

                    <ImageView
                        android:contentDescription="@string/activity_icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/rewardCup5"
                        android:src="@drawable/btn_award_red"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:layout_gravity="end"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.25"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/activityIconArea6">

                <ImageView
                    android:id="@+id/activityIcon6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_platform_icon_margin"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/activity_icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_act_sd04" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activityReward6">

                    <ImageView
                        android:contentDescription="@string/activity_icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/rewardCup6"
                        android:src="@drawable/btn_award_blue"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:layout_gravity="end"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.25"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/activityIconArea8">

                <ImageView
                    android:id="@+id/activityIcon8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_platform_icon_margin"
                    android:contentDescription="@string/activity_icon"
                    android:src="@drawable/btn_act_sd04"
                    android:visibility="gone" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activityReward8">

                    <ImageView
                        android:contentDescription="@string/activity_icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/imageView13"
                        android:src="@drawable/btn_award_red"
                        android:layout_weight="1"
                        android:scaleType="fitStart"
                        android:layout_gravity="end"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.25"/>
                </LinearLayout>
            </RelativeLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2" />

        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressFrame">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/loading"
            android:textColor="@color/regularBlack"
            android:textSize="@dimen/loadingTextSize"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".6"
            android:gravity="center_vertical|center_horizontal"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</FrameLayout>