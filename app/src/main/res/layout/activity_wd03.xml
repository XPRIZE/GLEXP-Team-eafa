<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/Activity_BaseFrame"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bg_wd03" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:id="@+id/Curriculum_Top_Buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" >

            <include
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout="@layout/activity_top_area" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.1" >

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2" />

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:visibility="visible"
                android:id="@+id/lettersBox">

                <View
                    android:id="@+id/View01"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/none"
                        android:scaleType="fitCenter"
                        android:src="@drawable/frm_w08" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="34dp" >

                        <TableRow
                            android:id="@+id/TableRow02"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" >

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:id="@+id/word1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/wd03_text_image_margin"
                                    android:src="@drawable/rounded_border_unchosen" />

                                <TextView
                                    android:id="@+id/wordResponce1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/strRandomString"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:lineSpacingMultiplier=".8"
                                    android:text="@string/strRandomString"
                                    android:textColor="@color/normalBlack"
                                    android:textSize="@dimen/wd03_font_size"
                                    android:layout_marginTop="@dimen/wd03_text_top_margin" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:id="@+id/word2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/wd03_text_image_margin"
                                    android:src="@drawable/rounded_border_correct" />

                                <TextView
                                    android:id="@+id/wordResponce2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:lineSpacingMultiplier=".8"
                                    android:text="@string/strRandomString"
                                    android:textColor="@color/normalBlack"
                                    android:textSize="@dimen/wd03_font_size"
                                    android:layout_marginTop="@dimen/wd03_text_top_margin" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:id="@+id/word3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/wd03_text_image_margin"
                                    android:src="@drawable/rounded_border_incorrect" />

                                <TextView
                                    android:id="@+id/wordResponce3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:lineSpacingMultiplier=".8"
                                    android:text="@string/strRandomString"
                                    android:textColor="@color/normalBlack"
                                    android:textSize="@dimen/wd03_font_size"
                                    android:layout_marginTop="@dimen/wd03_text_top_margin" />

                            </RelativeLayout>

                        </TableRow>

                        <TableRow
                            android:id="@+id/TableRow01"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1" >

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:id="@+id/word4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/wd03_text_image_margin"
                                    android:src="@drawable/rounded_border_correct" />

                                <TextView
                                    android:id="@+id/wordResponce4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/strRandomString"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:lineSpacingMultiplier=".8"
                                    android:text="@string/strRandomString"
                                    android:textColor="@color/normalBlack"
                                    android:textSize="@dimen/wd03_font_size"
                                    android:layout_marginTop="@dimen/wd03_text_top_margin" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:id="@+id/word5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/wd03_text_image_margin"
                                    android:src="@drawable/rounded_border_chosen" />

                                <TextView
                                    android:id="@+id/wordResponce5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:lineSpacingMultiplier=".8"
                                    android:text="@string/strRandomString"
                                    android:textColor="@color/normalBlack"
                                    android:textSize="@dimen/wd03_font_size"
                                    android:layout_marginTop="@dimen/wd03_text_top_margin" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <ImageView
                                    android:id="@+id/word6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/wd03_text_image_margin"
                                    android:src="@drawable/rounded_border_unchosen" />

                                <TextView
                                    android:id="@+id/wordResponce6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:lineSpacingMultiplier=".8"
                                    android:text="@string/strRandomString"
                                    android:textColor="@color/normalBlack"
                                    android:textSize="@dimen/wd03_font_size"
                                    android:layout_marginTop="@dimen/wd03_text_top_margin" />

                            </RelativeLayout>
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/View02"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </TableLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5" >

            <View
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1" >

            <View
                android:id="@+id/view7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" >

                <ImageView
                    android:id="@+id/btnMicDude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/none"
                    android:src="@drawable/btn_dude_wd03" />

                <ProgressBar
                    android:id="@+id/loadingCircle1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.7" >

                <ImageView
                    android:id="@+id/btnValidate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/none"
                    android:src="@drawable/btn_validate_assess_ok" />

                <ProgressBar
                    android:id="@+id/loadingCircle2"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <View
                android:id="@+id/view8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2" />
        </TableRow>

    </TableLayout>

</FrameLayout>