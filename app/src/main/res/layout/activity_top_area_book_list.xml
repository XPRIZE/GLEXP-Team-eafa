<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Launch_General"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal" >

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView23"
        android:layout_weight="1"
        android:src="@drawable/btn_move_brown_left" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView24"
        android:layout_weight="1"
        android:src="@drawable/btn_move_brown_right" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/activityName"
        android:layout_weight="2"
        android:textColor="@color/darkGray"
        android:textSize="@dimen/activity_name_font_size"
        android:gravity="top"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/btnChangeCase"
        android:src="@drawable/btn_changecase"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/btnVideo"
        android:src="@drawable/btn_video"
        android:layout_weight="1"
        android:visibility="visible"
        android:onClick="tvButtonClicked" />

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/none"
        android:scaleType="fitCenter"
        android:onClick="infoButtonClicked"
        android:soundEffectsEnabled="false"
        android:src="@drawable/btn_info" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/none"
        android:scaleType="fitCenter"
        android:soundEffectsEnabled="false"
        android:src="@drawable/btn_move_blue"
        android:onClick="backButtonClicked" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2" />

</LinearLayout>

