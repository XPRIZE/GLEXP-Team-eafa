                android:layout_weight=".5"
                android:gravity="center_vertical|center_horizontal"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".01"/>

            <RelativeLayout
                android:layout_width="0dp"
