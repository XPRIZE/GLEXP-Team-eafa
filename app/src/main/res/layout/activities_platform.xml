<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activitiesMainFrame"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_wd06">

    <LinearLayout
        android:id="@+id/topIcons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="6dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight=".15"
        app:layout_constraintBottom_toTopOf="@+id/iconSpace">

        <include
            layout="@layout/activity_top_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Space
        android:id="@+id/iconSpace"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/topIcons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_weight="1" />


    <ImageView
        android:id="@+id/activityIcon1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/activity_platform_icon_margin"
        android:contentDescription="@string/activity_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_act_lt04"
        app:layout_constraintBottom_toTopOf="@+id/activityIcon4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/activityIcon2"
        app:layout_constraintTop_toBottomOf="@+id/topIcons"
        app:layout_constraintVertical_weight="0.5" />

    <ImageView
        android:id="@+id/activityIcon2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/activity_platform_icon_margin"
        android:contentDescription="@string/activity_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_act_lt04"
        app:layout_constraintBottom_toBottomOf="@id/activityIcon1"

        app:layout_constraintBottom_toTopOf="@+id/activityIcon5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/activityIcon1"
        app:layout_constraintRight_toLeftOf="@+id/activityIcon3"
        app:layout_constraintTop_toBottomOf="@+id/topIcons"
        app:layout_constraintVertical_weight="0.5" />

    <ImageView
        android:id="@+id/activityIcon3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/activity_platform_icon_margin"
        android:contentDescription="@string/activity_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_act_lt04"
        app:layout_constraintBottom_toTopOf="@+id/activityIcon6"
        app:layout_constraintHorizontal_weight="1"


        app:layout_constraintLeft_toRightOf="@+id/activityIcon2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topIcons"
        app:layout_constraintVertical_weight="0.5" />


    <ImageView
        android:id="@+id/activityIcon4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/activity_platform_icon_margin"
        android:contentDescription="@string/activity_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_act_sd04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/activityIcon5"
        app:layout_constraintTop_toBottomOf="@+id/activityIcon1"
        app:layout_constraintVertical_weight="0.5" />

    <ImageView
        android:id="@+id/activityIcon5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/activity_platform_icon_margin"
        android:adjustViewBounds="false"
        android:contentDescription="@string/activity_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_act_sd04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/activityIcon4"
        app:layout_constraintRight_toLeftOf="@+id/activityIcon6"
        app:layout_constraintTop_toBottomOf="@+id/activityIcon2"
        app:layout_constraintVertical_weight="0.5" />

    <ImageView
        android:id="@+id/activityIcon6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/activity_platform_icon_margin"
        android:contentDescription="@string/activity_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_act_sd04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/activityIcon5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityIcon3"
        app:layout_constraintVertical_weight="0.5" />

    <ImageView
        android:id="@+id/rewardCup1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:contentDescription="@string/activity_icon"
        android:scaleType="fitStart"
        android:src="@drawable/btn_award_red"
        app:layout_constraintTop_toTopOf="@+id/activityIcon1"
        app:layout_constraintLeft_toLeftOf="@+id/activityIcon1"
        app:layout_constraintDimensionRatio="h,3:1"/>

    <ImageView
        android:id="@+id/rewardCup2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:contentDescription="@string/activity_icon"
        android:scaleType="fitStart"
        android:src="@drawable/btn_award_orange"
        app:layout_constraintTop_toTopOf="@+id/activityIcon2"
        app:layout_constraintLeft_toLeftOf="@+id/activityIcon2"
        app:layout_constraintDimensionRatio="h,3:1" />

    <ImageView
        android:id="@+id/rewardCup3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:contentDescription="@string/activity_icon"
        android:scaleType="fitStart"
        android:src="@drawable/btn_award_blue"
        app:layout_constraintTop_toTopOf="@+id/activityIcon3"
        app:layout_constraintLeft_toLeftOf="@+id/activityIcon3"
        app:layout_constraintDimensionRatio="h,3:1" />



    <ImageView
        android:id="@+id/rewardCup4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:contentDescription="@string/activity_icon"
        android:scaleType="fitStart"
        android:src="@drawable/btn_award_orange"
        app:layout_constraintTop_toTopOf="@+id/activityIcon4"
        app:layout_constraintLeft_toLeftOf="@+id/activityIcon4"
        app:layout_constraintDimensionRatio="h,3:1"/>

    <ImageView
        android:id="@+id/rewardCup5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/activity_icon"

        android:scaleType="fitStart"
        android:src="@drawable/btn_award_red"
        app:layout_constraintTop_toTopOf="@+id/activityIcon5"
        app:layout_constraintLeft_toLeftOf="@+id/activityIcon5"
        app:layout_constraintDimensionRatio="h,3:1" />


    <ImageView
        android:id="@+id/rewardCup6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/activity_icon"

        android:scaleType="fitStart"
        android:src="@drawable/btn_award_blue"
        app:layout_constraintTop_toTopOf="@+id/activityIcon6"
        app:layout_constraintLeft_toLeftOf="@+id/activityIcon6"
        app:layout_constraintDimensionRatio="h,3:1" />





</android.support.constraint.ConstraintLayout>
