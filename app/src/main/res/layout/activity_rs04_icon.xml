<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lps_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
    >


    <com.motoli.apps.allsubjects.GridViewItem xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:id="@+id/tracingImage"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:scaleType="centerCrop"
                                              android:src="@drawable/round_square_1" >
    </com.motoli.apps.allsubjects.GridViewItem>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/phonic_1"
        android:id="@+id/grid_item_text"
        android:layout_alignTop="@+id/tracingImage"
        android:layout_alignBottom="@+id/tracingImage"
        android:layout_alignLeft="@+id/tracingImage"
        android:layout_alignRight="@+id/tracingImage"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/gridText"
        android:textColor="@color/normalBlack"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="-15dp"/>


</RelativeLayout>