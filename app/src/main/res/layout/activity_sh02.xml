<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_sky_snow_white_ground" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.23"
            layout="@layout/activity_top_area" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activityMainPartSecond">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05"/>

            <ImageView
                android:id="@+id/btnMicDude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/none"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_dude_turquise_ears"
                android:layout_weight="1" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".06"/>

            <ImageView
                android:id="@+id/btnValidate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/strNone"
                android:scaleType="fitStart"
                android:src="@drawable/btn_validate_on_mic"
                android:layout_weight="1" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activityMainPart">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.35"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/frm_sh02_on"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/strNone"
                    android:id="@+id/frame1" />

                <com.motoli.apps.allsubjects.CanvasView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shape1"
                    android:tag="0"
                    android:layout_margin="@dimen/shape_margin_large"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/shapeSpace1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/frm_sh02_on"
                    android:contentDescription="@string/strNone"
                    android:id="@+id/frame2" />

                <com.motoli.apps.allsubjects.CanvasView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/shape2"
                    android:tag="4"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/shapeSpace2"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/frm_sh02_off"
                    android:contentDescription="@string/strNone"
                    android:id="@+id/frame3" />

                <com.motoli.apps.allsubjects.CanvasView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shape3"
                    android:tag="2"
                    android:layout_margin="@dimen/sh02_shape_margin_large" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/shapeSpace3"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/frm_sh02_on"
                    android:contentDescription="@string/strNone"
                    android:id="@+id/frame4" />

                <com.motoli.apps.allsubjects.CanvasView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shape4"
                    android:tag="2"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/shapeSpace4"/>

            </RelativeLayout>

        </TableRow>
    </LinearLayout>

</FrameLayout>